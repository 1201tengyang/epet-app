*
  margin 0
  padding 0
  box-sizing border-box
body
  line-height 1.6
  font-family 'Microsoft Yahei',-apple-system-font,Helvetica Neue,sans-serif

.main
  max-width 640px
  margin auto

.pl10, .pl
  padding-left 10px

.pb5
  padding-bottom 5px

.pr10, .pr
  padding-right 10px

.pt5
  padding-top 5px

.epet-search
  padding 8px 0
  background #fff
  text-align center
  display -webkit-box
  -webkit-box-align center
  display -moz-box
  -moz-box-align center
  width 100%

.location
  margin-right 20px

.relative, .rela
  position relative

.ft14
  font-size 14px

.fl, .pull-left
  float left

.c89
  color #898989

.ft13
  font-size 13px

.location i
  position absolute
  top 10px
  right -11px
  border-width 4px
  font-size 0
  line-height 0
  border-style solid solid dotted
  border-color #898989 transparent transparent transparent

i, em
  font-style normal

.epet-search p
  position relative

.epet-logo, .epet-category
  display block

.epet-category img
  width 25px
  margin-left 10px

a img
  border 0
a
  display block
img
  vertical-align middle

.epet-search input
  width 100%
  border 0
  height 25px
  background #e9e9e9
  border-radius 4px
  color #bcbcbc
  text-indent 10px
  font-size 13px
  outline 0

.epet-search .serach-ico
  width 11px
  height 11px
  position absolute
  right 5px
  top 0
  bottom 0
  margin auto 0
  background-position 0 0

.eico
  background url(https://static.epetbar.com/static_web/wap/dist/images/search.png) no-repeat
  background-size 11px auto

.epet-logo, .epet-category
  display block

.epet-search p
  -webkit-box-flex 1
  -moz-box-flex 1
